# PostgreSQL Configuration
POSTGRES_DB=monetaris
POSTGRES_USER=monetaris_user
POSTGRES_PASSWORD=monetaris_pass

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@monetaris.local
PGADMIN_DEFAULT_PASSWORD=admin

# SonarQube Configuration
SONAR_JDBC_URL=jdbc:postgresql://postgres:5432/sonarqube
SONAR_JDBC_USERNAME=monetaris_user
SONAR_JDBC_PASSWORD=monetaris_pass

# Application Settings (f√ºr Backend)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_ISSUER=monetaris-api
JWT_AUDIENCE=monetaris-client
JWT_EXPIRY_MINUTES=60
REFRESH_TOKEN_EXPIRY_DAYS=7

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# File Storage
FILE_STORAGE_PROVIDER=Local
FILE_STORAGE_LOCAL_PATH=./uploads
FILE_STORAGE_MAX_SIZE_MB=10

# Logging
SERILOG_MINIMUM_LEVEL=Information
SEQ_SERVER_URL=http://seq:5341

# Environment
ASPNETCORE_ENVIRONMENT=Development
